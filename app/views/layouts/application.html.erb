<!DOCTYPE html>
<html>
  <head>
    <title>Ziller</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'partials/header' %>
    <div class="">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>
    <% if @verify %>
      TESTSET
    <% end %>
    <div class="relative">
      <%= yield %>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript">
    $(document).ready(function(){
      var $weekend = $('.hours__weekend');
      var $weekday = $('.hours__weekday');
      $(`.hours__day[data-day=<%= @date %>]`).addClass('active');

      $('.hours__day').on('mouseenter',function(){
        var that = $(this);
        $('.hours__day').removeClass('active');
        that.addClass('active');
        if (that.data('type') === 'weekday') {
          $weekend.removeClass('active');
          $weekday.addClass('active');
        }
        else {
          $weekday.removeClass('active');
          $weekend.addClass('active');

        }
      })
    })
    </script>
  </body>
</html>
