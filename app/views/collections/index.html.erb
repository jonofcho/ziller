<div class="page-width">
  <div class="">
    <h1>Collections#index</h1>
    <p>Find me in app/views/collections/index.html.erb</p>
    <a href="<%= new_collection_path %>">Create new Collection</a>
    <div class="">
      <table>
        <% for collection in @collections  %>
        <tr>
          <td><%= collection.name %></td>
          <td><%= link_to 'Edit' , edit_collection_path(collection) %> </td>
          <td><%= link_to 'Delete', collection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td></td>
        </tr>

        <% end %>
      </table>
    </div>
  </div>
</div>
