<%= form_for @product do |f| %>
  <p>
    <label for="">name</label>
    <%= f.text_field :name %>
  </p>
  <p>
    <label for="">price</label>
    <%= f.text_field :price %>
  </p>
  <p>
    <label for="">description</label>
    <%= f.text_field :description %>
  </p>

  <%= f.submit "Create" %>
<% end %>
